@{
    ViewData["Title"] = "Download";
}

<div class="container py-4">

    <h2 class="text-center mb-4">Download Datasets</h2>

    <!-- =========================
         A) EXISTING: DOWNLOAD ALL
         ========================= -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Download all datasets</h5>

            <div class="row g-3 align-items-start">
                <div class="col-md-4">
                    <label class="form-label">File type</label>
                    <select id="downloadType" class="form-select">
                        <option value="">Select format</option>
                        <option value="csv">CSV</option>
                        <option value="pdf">PDF</option>
                        <option value="json">JSON</option>
                        <option value="xlsx">XLSX</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label d-block">&nbsp;</label>
                    <button id="downloadButton" class="btn btn-primary w-100" type="button" disabled>
                        Download
                    </button>
                </div>

                <div class="col-md-4">
                    <label class="form-label d-block">&nbsp;</label>
                    <a class="btn btn-outline-secondary w-100" href="/swagger">Go to API</a>
                </div>
            </div>

            <div class="mt-2 text-center">
                <span id="progressText" class="small" style="color: green;"></span>
            </div>
        </div>
    </div>

    <!-- =========================
         B) NEW: DOWNLOAD SELECTED
         ========================= -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Download selected datasets</h5>

            <div class="row g-3 align-items-start">

                <!-- Dataset multi-select dropdown -->
                <div class="col-md-4">
                    <label class="form-label">Datasets</label>

                    <div class="dropdown w-100">
                        <button class="btn btn-outline-primary dropdown-toggle w-100 d-flex justify-content-between align-items-center"
                                type="button"
                                id="datasetDropdownBtn"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            <span>Select datasets</span>
                            <span class="badge bg-primary" id="selectedCountBadge">0</span>
                        </button>

                        <div class="dropdown-menu p-2 w-100" style="max-height: 320px; overflow:auto;" aria-labelledby="datasetDropdownBtn">
                            <div class="d-flex align-items-center mb-2">
                                <input class="form-check-input me-2" type="checkbox" id="selectAllDatasets">
                                <label class="form-check-label" for="selectAllDatasets"><strong>Select all</strong></label>
                            </div>

                           

                            <div id="datasetCheckboxList" class="px-1">
                                <div class="text-muted small">Loading datasets…</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-text">
                        Selected: <span id="selectedCountText">0</span>
                    </div>
                </div>

                <!-- Selected format -->
                <div class="col-md-4">
                    <label class="form-label">File type</label>
                    <select id="selectedDownloadType" class="form-select">
                        <option value="">Select format</option>
                        <option value="csv">CSV</option>
                        <option value="pdf">PDF</option>
                        <option value="json">JSON</option>
                        <option value="xlsx">XLSX</option>
                    </select>
                    <!-- Spacer to match Datasets column height -->
                    <div class="form-text">&nbsp;</div>
                </div>

                <!-- Download selected -->
                <div class="col-md-4">
                    <label class="form-label d-block">&nbsp;</label>
                    <button id="downloadSelectedButton" class="btn btn-success w-100" type="button" disabled>
                        Download selected
                    </button>
                </div>
            </div>

            <div class="mt-2 text-center">
                <span id="selectedProgressText" class="small" style="color: green;"></span>
            </div>
        </div>
    </div>

</div>


