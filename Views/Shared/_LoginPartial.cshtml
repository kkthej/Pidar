@using Microsoft.AspNetCore.Identity
@using Pidar.Areas.Identity.Data
@inject SignInManager<PidarUser> SignInManager
@inject UserManager<PidarUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark"
               href="#"
               id="adminDropdown"
               role="button"
               data-bs-toggle="dropdown"
               aria-expanded="false">
                Hello @User.Identity?.Name!
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow"
                aria-labelledby="adminDropdown">

                <li>
                    <a class="dropdown-item"
                       asp-area="Identity"
                       asp-page="/Account/Manage/Index">
                        Account
                    </a>
                </li>

                <li>
                    <a class="dropdown-item"
                       href="/matomo/">
                        Analytics
                    </a>
                </li>

                <li><hr class="dropdown-divider" /></li>

                <li>
                    <form asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                          method="post"
                          class="dropdown-item p-0 m-0">

                        <button type="submit"
                                class="btn btn-link text-danger w-100 text-start px-3">
                            Logout
                        </button>
                    </form>
                </li>

            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-outline-primary rounded-pill px-3"
               asp-area="Identity"
               asp-page="/Account/Login">
                Admin Login
            </a>
        </li>
    }
</ul>