@model ErrorViewModel
@{
    // Safely handle cases where Model might still be null
    var errorModel = Model ?? new ErrorViewModel
            {
                RequestId = System.Diagnostics.Activity.Current?.Id ?? Context.TraceIdentifier
            };
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (!string.IsNullOrEmpty(errorModel.ErrorMessage))
{
        <p class="alert alert-danger">
            <strong>Error Details:</strong> @errorModel.ErrorMessage
        </p>
}

@if (!string.IsNullOrEmpty(errorModel.RequestId))
{
        <p>
            <strong>Request ID:</strong> <code>@errorModel.RequestId</code>
        </p>
}

@if (Context.Request.Headers["X-Requested-With"] != "XMLHttpRequest")
{
        <h3>Development Mode</h3>
        <p>
            Swapping to <strong>Development</strong> environment will display more detailed information.
        </p>
}